#ifndef _STDIO_H
#define _STDIO_H
#endif

//#include <unistd.h>
int ROW=25, COLUMN=80;
int position=0;
int scanf(const char *format, ...);
int printf(const char* str) {
	return 0;
}

int putchar(char a)
{
	int color = 0x07;
	volatile char *video = (volatile char*)0xB8000;
  *(video++ + 2*position) = a;
	*video++ = color;
  position++;
  return 0;
}

int clrscr()
{
  int i;
	int color = 0x07;
  char ch = ' ';
	volatile char *video = (volatile char*)0xB8000;
  for(i=0; i<ROW*COLUMN; i++)
  {
    video++ = (volatile char)ch;
	  video++ = color;
  }
  return 0;
}

